<div class="card post">
	<div class="content">
		<div class="row" style="display: flex;">
			<img src="http://via.placeholder.com/40x40" alt="post-img-thumb" class="post-img-thumb">
			
			<div class="post-heading" style="display: block; flex: 11;">
				<h5 style="margin-bottom: 5px;">Ankush Malik</h5>
				<p>
					<span class="label label-warning">Jewellery</span>
					<span class="label label-primary">Property</span>
					<span class="label label-danger">Automobile</span>
				</p>
			</div>
			
			<div class="post-expand"><a class="fa fa-ellipsis-h" href="#post"></a></div>
		</div>
		<div class="row post-desc">
			Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid eos enim tempore temporibus, at repellendus.
		</div>

		<div class="row">
			<!-- carousel -->
			<%= render 'posts/carousel' %>

		</div>
		<script>
            function copyToClipboard(element) {
                var $temp = $("<input>");
                $("body").append($temp);
                $temp.val($(element).text()).select();
                document.execCommand("copy");
                $temp.remove();
            }
		</script>

		<div class="row">
			<div class="post-btn-group btn-group" role="group" aria-label="Basic example">
				<p id="ctcb" style="display: none">http://www.thepecul.com/</p>
				<button type="button" class="btn btn-info"><span class="fa fa-eye"></span> 434</button>
			  <button type="button" class="btn btn-primary"><i class="fa fa-inr"></i> bid</button>
			  <button type="button" onclick="copyToClipboard('#ctcb')" class="btn btn-secondary"><i class="fa fa-share-alt"></i> Share</button>
			</div>
		</div>
	</div>
</div>	