<style>
  body{
    overflow-y: hidden;
  }
</style>

<div class="container-fluid" style="padding: 0;background: linear-gradient(to bottom right, #2dbe60, #4ca2d2cd);">
  <%= render "home/navbar" %>
  <div class="container" style="height: 100vh; width: 100%">
    <div class="row" style="height: 100%; width: 100%; display: flex">
      <div class="col-md-5" style="margin: auto;position: relative; top: -75px;">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <h3 class="text-center">Forgot your password?</h3>
            </div>
            <div class="row">
              <div class="col-md-12" style="padding: 0 25px 0 25px">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="col-md-12">
                    <div class="field form-group label-floating">
                      <%= f.label :email, :class => 'control-label'%><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control'%>
                    </div>
                </div>

                <div class="col-md-12">
                  <div class="actions text-center" style="margin-bottom: 15px;margin-top: 17px">
                    <%= f.submit "Send me reset password instructions", :class => 'col-md-12 btn btn-primary'%>
                  </div>
                  <% end %>
                </div>

                <div class="text-center" style="margin-top: 20px">
                  <%= render "devise/shared/links"%>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







